<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="password_mode"
        android:summary="@string/pref_description_password_mode"
        android:title="@string/pref_password_mode_title" />

    
     <CheckBoxPreference
        android:defaultValue="true"
        android:key="notification_enable"
        android:title="@string/pref_notification_titile" />
    
   

    <!--
         NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it.
    -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="Normal"
        android:entries="@array/pref_list_font_size_title"
        android:entryValues="@array/pref_list_font_size_values"
        android:key="font_size_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_font_text_size" />

</PreferenceScreen>
