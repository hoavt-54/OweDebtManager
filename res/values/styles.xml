<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        
        <item name="android:actionBarStyle">@style/Theme.Actionbar_owe_debt</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/Theme.Actionbar_owe_debt</item>
        
    </style>

    <style name="debt_name_in_list">
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="debt_content_in_list">
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="debt_date_in_list">
        <item name="android:textSize">11sp</item>
    </style>
    
    <style name="input_field_title">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="input_field_edit_text">
        <item name="android:ems">10</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
    
    <style name="date_value_field">
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="ContactListView">
        <item name="android:verticalScrollbarPosition">right</item>
        <item name="android:fastScrollAlwaysVisible">true</item>
        <item name="android:scrollbarStyle">outsideInset</item>
    </style>

    <style name="listViewActivatedStyle"/>

    <style name="searchTextHiglight">
        <item name="android:textColor">@color/holo_blue</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="date_separator_style">
        <item name="android:textSize">16sp</item>
        <item name="android:text">August 14, 2014</item>
        <item name="android:textStyle">bold</item>
    </style>

