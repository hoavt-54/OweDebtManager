<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:background="@color/my_debt_item">
    
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
        
        <TextView 
            android:id="@+id/debt_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Binh - 2 500"
            style="@style/debt_name_in_list"
            />

        <TextView
            android:id="@+id/debt_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="content"
            style="@style/debt_content_in_list"
             />

    </LinearLayout>
    <TextView
            android:id="@+id/debt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:layout_gravity="center_vertical"
            android:text="31/08/14"
            style="@style/debt_date_in_list"
             />
    

</LinearLayout>
